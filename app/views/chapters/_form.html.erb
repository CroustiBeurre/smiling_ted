

<%= simple_form_for ([@ted, @chapter]), defaults: { input_html: { class: 'navbar-wagon-search' } } do |f| %>

   <!--  TODO : Geocoder gem with Autocomplete -->
  <%= f.input :localisation, label: t('.localisation_chapter_creation'), input_html: { class: 'navbar-wagon-search-input'} %>
  <%= f.input :country, label: "Country", required: true %>
  <%= f.input :description, label: t('.description_chapter_creation'), input_html: { class: 'navbar-wagon-search-input'} %>

  <h3>Photos</h3>
  <div id="photos">
  <%= f.simple_fields_for :photos do |photo|  %>
    <%= render 'photo_fields', f: photo %>
  <% end %>
  <div class="links">
    <%= link_to_add_association 'add photo', f, :photos  %>
  </div>

  <p><%= f.button :submit, class: 'btn btn-primary' %></p>
<% end %>
