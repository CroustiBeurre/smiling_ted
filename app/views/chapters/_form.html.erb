<%= simple_form_for([@ted, @chapter]) do |f| %>
  <%= f.input :description, label: t('.description_chapter_creation') %>
  <%= f.input :localisation, label: t('.localisation_chapter_creation'), input_html: { class: 'autocomplete' } %>
  <%= f.input :country, label: t('.country'), required: true %>

  <h3>Photos</h3>
  <div id="photos">
  <%= f.simple_fields_for :photos do |photo|  %>
    <%= render 'photo_fields', f: photo %>
  <% end %>
  <div class="links">
    <%= link_to_add_association 'add photo', f, :photos  %>
  </div>

  <p><%= f.button :submit, class: 'btn btn-primary' %></p>
<% end %>
