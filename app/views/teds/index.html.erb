<div class="container">
  <h2><%= t('.map') %></h2>
  <div id="map" style="width: 100%; height: 400px;"></div>
  <h1><%= t('.title') %></h1>
  <div class="row">
    <div class="col-xs-12 col-sm-1">
      <%= t('.rank') %>
    </div>
    <div class="col-xs-12 col-sm-2">
      <%= t('.name') %>
    </div>
    <div class="col-ws-12 col-sm-2">
      <%= t('.owner') %>
    </div>
    <div class="col-xs-12 col-sm-2">
      <%= t('.location') %>
    </div>
    <div class="col-ws-12 col-sm-3">
      <%= t('.distance_traveled') %>
    </div>
    <div class="col-xs-12 col-sm-2">
      <%= t('.details') %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <% @teds.each do |ted| %>
        <div class="ted">
          <div class="col-xs-12 col-sm-1">
            <%= ted.rank %>
          </div>
          <div class="col-xs-12 col-sm-2">
            <%= ted.name %>
          </div>
          <div class="col-xs-12 col-sm-2">
            <%= ted.user.first_name %>
          </div>
          <div class="col-xs-12 col-sm-2">
            <%= ted.location %>
          </div>
          <div class="col-xs-12 col-sm-3">
            <%= ted.distance_traveled %>
          </div>
          <div class="col-xs-12 col-sm-2">
            <%= link_to "details", ted_path(ted) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <% content_for(:after_js) do %>
    <%= javascript_tag do %>
      $(document).ready(function() {
        var handler = Gmaps.build('Google');
        handler.buildMap({ internal: { id: 'map' } }, function() {
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
          if (markers.length == 0) {
            handler.getMap().setZoom(2);
          } else if (markers.length == 1) {
            handler.getMap().setZoom(14);
          }
        });
      });
    <% end %>
  <% end %>
</div>
