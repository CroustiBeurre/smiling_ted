<div class="container">
  <p> <%= t('.name') %> <%= @ted.name %></p>
  <div class="row">
    <div class="col-xs-8">
      <div class="add-chapter">
        <%= image_tag "bear.svg" %>
        <%= link_to new_ted_chapter_path(@ted) do %>
          <button type="button" class="btn btn-default" href="#" > write a new chapter of Ted <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          </button>
        <% end %>
      </div>
      <% @ted.chapters.each do |chapter| %>
        <div class="chapter">
          <h5><%= chapter.description %></h5>
          <div class="row">
            <% chapter.photos.each do |photo| %>
              <div class="col-xs-4">
                <div class="card-photo">
                  <%= photo.title %>
                  <%= cl_image_tag(photo.image.path, { size: '125x125', crop: :fit }) %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-xs-4">
      <div class="teddy-card">
      </div>
    </div>
  </div><!-- row -->
</div>



 <div id="map" style="width: 60%; height: 600px;"></div>

  <% content_for(:after_js) do %>
    <%= javascript_tag do %>
      $(document).ready(function() {
        var handler = Gmaps.build('Google');
        handler.buildMap({ internal: { id: 'map' } }, function() {
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
          if (markers.length == 0) {
            handler.getMap().setZoom(2);
          } else if (markers.length == 1) {
            handler.getMap().setZoom(14);
          }
        });
      });
    <% end %>
  <% end %>
