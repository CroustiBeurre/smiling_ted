<div class="container">
  <p> <%= t('.name') %> <%= @ted.name %></p>

      <div class="add-chapter">
        <%= image_tag "bear.svg" %>
        <%= link_to new_ted_chapter_path(@ted) do %>
          <button type="button" class="btn btn-default" href="#" > write a new chapter of Ted <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          </button>
        <% end %>
      </div>

      <!-- Chapter -->
      <% @ted.chapters.each do |chapter| %>
        <div class="chapter">
          <h2><%= chapter.description %></h2>

            <!-- Photos -->
            <% chapter.photos.each do |photo| %>

              <div class="card-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path photo.image.path, height: 270, crop: :scale %>');">
                <div class="card-content">
                  <h3 class="font<%= [1,2,3,4,5].sample %>"><%= photo.title %></h3>
                </div>
              </div>

            <% end %>
            </ul>

      <% end %>

</div>



 <div id="map" style="width: 60%; height: 600px;"></div>

  <% content_for(:after_js) do %>
    <%= javascript_tag do %>
      $(document).ready(function() {
        var handler = Gmaps.build('Google');
        handler.buildMap({ internal: { id: 'map' } }, function() {
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
          if (markers.length == 0) {
            handler.getMap().setZoom(2);
          } else if (markers.length == 1) {
            handler.getMap().setZoom(14);
          }
        });
      });
    <% end %>
  <% end %>
