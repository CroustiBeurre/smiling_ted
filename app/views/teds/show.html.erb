<div class="container-full">

  <!-- Offset & main row-->
  <div class="row">
   <div class="col-xs-10 col-xs-offset-1">
    <div class="row">



      <!-- Story Title -->
      <h1>
        <img src="http://cdn.perfectmemorials.com/product_images/3673837/lg/3415.brownteddybearcr_lrg_0.jpg" class="avatar-large" />
        <%=  t('.history')%> <%= @ted.name %>
      </h1>



      <!-- Call-To-Action -->
      <%= form_tag ted_check_code_path(@ted) do %>
        <%= label_tag(:ted_code, "code") %>
        <%= text_field_tag(:ted_code) %>
        <%= submit_tag(t('chapter'), class:"btn btn-default")  %><span class="btn glyphicon glyphicon-pencil" aria-hidden="true"></span>
      <% end %>

      <% chapter_number = @ted.chapters.size + 1 %>

      <% @ted.chapters.reverse.each do |chapter| %>


        <!-- Chapter -->
        <div class="row chapter">

          <!-- Chapter Title -->

         <% chapter_number -= 1 %>
          <h1>Chapter <%= chapter_number %>. <%= @ted.name %> <%= t('.travel') %> <%= chapter.localisation %></h1>
          <% if chapter.user.first_name == current_user %>
            <p>Chapter written by <b>you/b></p>
          <% elsif chapter.user.first_name? %>
            <p>Chapter written by <b><%= chapter.user.first_name %></b></p>
          <% end %>
          <div class="col-md-6">
           <div class="row">

              <% chapter.photos.each_with_index do |photo, index| %>

               <% if index == 0 %>
                  <div class="col-md-12">
               <% else %>
                  <div class="col-md-4">
               <% end %>
                <!-- One Clikable Photo -->
                <%= link_to cl_image_path(photo.image.path), class: "swipebox", title: chapter.localisation + '<br/>' + photo.title + '<br/>'+ photo.description do %>
                  <div class="card-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path photo.image.path, height: 600, gravity: :center, crop: :fill %>');">
                    <div class="card-content">
                      <h3 class="font<%= [1,2,3,4,5].sample %> responsive_font"><%= photo.title %></h3>
                    </div>
                  </div>
                <% end %>
                <% index +=1 %>

               </div>
              <% end %>


            </div>
          </div>

          <!-- Map & Text -->
          <div class="col-md-6">
            <div class="gmap" id="map-<%= chapter.id %>" data-longitude="<%= chapter.longitude %>" data-latitude="<%= chapter.latitude %>" style='width: 100%; height: 400px;'></div>

            <h3 class="font<%= [1,2,3,4,5].sample %>"><%= chapter.description %></h3>
          </div>


          <hr>


        </div><!-- Chapter -->


      <% end %>






    <!-- Offset & main row-->
    </div>
   </div>
  </div>

</div><!--container-->
